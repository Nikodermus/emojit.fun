bg-switch = url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 4 5'%3E%3Cpath fill='%23343a40' d='M2 0L0 2h4zm0 5L0 3h4z'/%3E%3C/svg%3E") no-repeat right sizing-MD center

.language-switch
    align-items: center
    appearance: none
    background: color-white bg-switch
    background-size: 8px 10px
    border-radius: border-radius-MD
    border: 1px solid color-gray-highlight
    cursor: pointer
    display: flex
    font-size: font-size-XL
    height: sizing-4XL
    justify-content: center
    padding-left: sizing-MD
    padding-right: sizing-XL
    position: fixed
    right: sizing-2XL
    text-transform: uppercase
    top: sizing-2XL
    min-width: rem(80)
    text-align: center

    +prefer-dark()
        background: color-white-transparent bg-switch
        background-size: @background-size
        color: color-white

    option
        font-size: font-size-2XL
        overflow: visible
        padding: sizing-MD

        +prefer-dark()
            background: color-black
