.letter-break
    display: inline-flex
    margin-inline-end: sizing-XL

.letter-input
    height: sizing-6XL
    width: sizing-4XL
    background: color-black-transparent
    margin-bottom: sizing-LG
    margin-left: sizing-SM
    border-radius: border-radius-MD
    text-align: center
    font-size: font-size-3XL
    text-transform: uppercase
    display: inline-flex
    justify-content: center
    align-items: center

    &:first-of-type
        margin-left: 0

    +prefer-dark()
        background: color-white-transparent
        color: color-white

    +below("sm")
        height: sizing-4XL
        width: sizing-XL
        font-size: font-size-XL
