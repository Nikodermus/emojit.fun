@require "./helpers/reset"
@require "./helpers/mixins"
@require "./helpers/miscelanous"
@require "./library/fonts"
// You can remove this on release
// @require "./vendor/a11y"
@require "./components/*"

:root
    scrollbar

// General Elements Styling
html
    font-family: font-family-sans
    max-width: 100vw
    min-height: 100vh
    overflow: hidden
    scroll-behavior: smooth

    +below("sm", orientation: landscape)
        min-height: "max(100vh, %s)" % rem(400)

    +below("sm", orientation: portrait)
        min-height: "max(100vh, %s)" % rem(300)

    #___gatsby
    #gatsby-focus-wrapper
    body
        font-family: @font-family
        min-height: @min-height
        line-height: line-height-LG
        max-width: @max-width
        overflow-x: hidden
        scroll-behavior: @scroll-behavior
        width: 100vw
        color: color-black
        background: transparent
        display: flex
        align-items: center
        justify-content: center

        scrollbar
        *
            line-height: inherit
            scroll-behavior: @scroll-behavior

    body
        background: color-brand-yellow

        &.success
            background: color-brand-green

        &.failure
            background: color-brand-red

@media (prefers-color-scheme: dark)
    body:not(.success):not(.failure)
        background: color-brand-black
